<!DOCTYPE html>
<html>
<head>
    <title></title>
    <%- include ../../layout/head %>
</head>
<body>
    <%- include ../../layout/nav %>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Add new post
                </div>
                <div class="panel-body">
                    <div class="row">
                        <% if (data && data.error){ %>
                        <div style="" id="login-alert" class="alert alert-danger col-sm-12">
                            <%= data.error%>
                        </div>
                        <%}%>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form" method="POST" action="/admin/post/new">
                                <div class="form-group">
                                    <label>Title</label>
                                    <input class="form-control" name="title" type="text">
                                </div>
                                <div class="form-group">
                                    <label>Content</label>
                                    <input class="form-control" name="content" placeholder="Enter text">
                                </div>

                                <div class="form-group">
                                    <label>Author</label>
                                    <input class="form-control" name="author" placeholder="Enter text">
                                </div>

                                <div class="form-group">
                                    <label>Categories</label>
                                    <input class="form-control" name="categories" placeholder="Enter text">
                                </div>

                                <input type="submit" value="Add" class="btn btn-success">

                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</body>
</html>