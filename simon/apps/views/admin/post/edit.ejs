<!DOCTYPE html>
<html>
<head>
    <title></title>
    <%- include ../../layout/head %>
</head>
<body>
    <%- include ../../layout/nav %>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Edit post
                </div>
                <div class="panel-body">
                    <div class="row">
                        <% if (data && data.error){ %>
                        <div style="" id="login-alert" class="alert alert-danger col-sm-12">
                            <%= data.error%>
                        </div>
                        <%}%>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form" method="" action="">
                                <input type="hidden" name="id" value="<%if(data && data.post._id){%><%=data.post._id%><%}%>">
                                <div class="form-group">
                                    <label>Title</label>
                                    <input class="form-control" name="title" type="text" value="<%if (data && data.post.title){ %><%= data.post.title%><%}%>" />
                                </div>
                                <div class="form-group">
                                    <label>Content</label>
                                    <input class="form-control" name="content" placeholder="Enter text" value="<%if (data && data.post.content){ %><%= data.post.content%><%}%>">
                                </div>

                                <div class="form-group">
                                    <label>Author</label>
                                    <input class="form-control" name="author" placeholder="Enter text" value="<%if (data && data.post.author){ %><%= data.post.author%><%}%>">
                                </div>

                                <div class="form-group">
                                    <label>Categories</label>
                                    <input class="form-control" name="categories" placeholder="Enter text" value="<%if (data && data.post.categories){ %><%= data.post.categories %><%}%>">
                                </div>

                                <span type="btn" class="btn btn-success btn_edit"> Edit </span>

                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <script type="text/javascript">
    $(".btn_edit").click(function(e){
        var params = $('form').serialize();

        var base_url = location.protocol + "//" + document.domain + ":" + location.port + "/";


        $.ajax({
            url: base_url + "admin/post/edit",
            type: "PUT",
            data: params,
            dataType: "json",
            success: function(response){
                if(response && response.status_code == 200)
                    location.href = "/admin";
            }
        });

    });
    </script>
</body>
</html>




