<!DOCTYPE html>
<html lang="en">
<% include ../partials/head %>
<body>
    <div class="container">
        <h1>NodeJS HeyKorean</h1>
        <div class="alert alert-success" role="alert">HeyKorean - AnPSoft</div>
        <div>
            <a href="http://localhost:3000/admin/deleteUser"><button type="button" name="get_users" class="btn btn-success all_users">Delete</button></a>
            <a href="http://localhost:3000/signup"><button type="button" name="get_users" class="btn btn-success all_users">Add New</button></a>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Firstname</td>
                    <td>Lastname</td>
                    <td>Email</td>
                    <td>Action</td>
                </tr>
                <% data.forEach(function (item) { %>
                    <tr>  
                        <td><%= item._id %></td>  
                        <td><%= item.firstName %></td>  
                        <td><%= item.lastName %></td>
                        <td><%= item.email %></td>
                        <td>
                            <a href="http://localhost:3000/update"><button type="button" name="get_users" class="btn btn-success all_users">Update</button></a>
                            <a href="http://localhost:3000/admin/deleteUser/<%= item._id %>"><button type="button" name="get_users" class="btn btn-success all_users">Delete</button></a>
                        </td>
                    </tr>                                   
                <% }) %>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</body>
</html>